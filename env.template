# AURA Environment Configuration Template
# Copy this file to .env and update with your values

# Environment (development, staging, production)
EXPO_PUBLIC_ENVIRONMENT=development

# API Configuration
API_BASE_URL=http://localhost:8000
WS_URL=ws://localhost:8000/ws

# Production URLs (uncomment for production)
# API_BASE_URL=https://api.aura.app
# WS_URL=wss://api.aura.app/ws

# Alternative: Use EXPO_PUBLIC_API_URL for Expo environment variables
# Development: http://192.168.178.97:8000 (update with your local IP)
# Staging: https://staging-api.aura.com
# Production: https://api.aura.com
EXPO_PUBLIC_API_URL=http://localhost:8000

# Feature Flags
ENABLE_BIOMETRICS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_WEBSOCKET=true
ENABLE_DARK_MODE=true
ENABLE_OFFLINE_MODE=true

# Expo Feature Flags
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=false

# Debug
DEBUG_MODE=true
LOG_LEVEL=debug

# Optional: Backend API Keys (if needed)
# BACKEND_API_KEY=your-backend-api-key

